// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  output = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

// -------------------- ENUMS --------------------

enum TaskTier {
  S // Critical (Project, Exam Prep) - High XP
  A // Important (Coding, DSA)
  B // Maintenance (Assignment, Class)
  C // Chores (Laundry, Email)
}

enum Category {
  DEV
  ACADEMICS
  HEALTH
  LIFE
}

enum TaskType {
  DAILY    // Created for today specifically
  WEEKLY   // A template that repeats (e.g., Gym)
  BACKLOG  // The "Dump" area
}

// -------------------- MODELS --------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  
  // --- Gamification Stats ---
  xp           Int       @default(0)
  level        Int       @default(1)
  coins        Int       @default(0)
  honestyScore Int       @default(100)
  
  // --- Streak Logic ---
  streakDays   Int       @default(0)
  multiplier   Float     @default(1.0)
  lastTaskDate DateTime?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  tasks        Task[]
  dayLogs      DayLog[]
  inventory    InventoryItem[]
  accounts     Account[]
  sessions     Session[]

  @@index([email])
}

model Task {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title        String
  description  String?
  
  // Type of mission
  type         TaskType @default(DAILY)
  
  // Difficulty & Type
  tier         TaskTier @default(C)
  category     Category @default(LIFE)
  
  // Time Management
  plannedDate      DateTime
  plannedStartTime DateTime?
  plannedEndTime   DateTime?
  deadline         DateTime? // For BACKLOG items
  scheduledDate    DateTime? // For DAILY items (Which specific day is this for?)
  
  // Weekly Logic (For Templates)
  repeatDays       String?   // Stores "0,2,4" (Sun, Tue, Thu) for Weekly templates
  
  // Completion Status
  isCompleted      Boolean   @default(false)
  completedAt      DateTime?
  
  // Rewards Calculation
  basePoints       Int       @default(10)
  xpWorth          Int       @default(10)
  isBonus          Boolean   @default(false) // If true, gives +10 XP (for Weekly tasks done on time)
  timeBonus        Int       @default(0)
  finalPoints      Int       @default(0)
  
  // Duration & Expiry System
  deadlineTime      DateTime?  // Time of day the task expires
  allocatedDuration Int?       // Expected duration in minutes
  durationMet       Boolean    @default(false)  // Did user complete within duration?
  isExpired         Boolean    @default(false)  // Task was cut at deadline
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([userId, isCompleted])
  @@index([plannedDate])
}

model DayLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date         DateTime @db.Date
  
  totalXP      Int      @default(0)
  tasksDone    Int      @default(0)
  possibleXP   Int      @default(0)  // Total XP that could have been earned
  
  // Anti-Cheat Metrics
  cTierCount   Int      @default(0)
  sTierCount   Int      @default(0)
  
  streakAtEnd  Int      @default(0)

  @@unique([userId, date])
  @@index([userId, date])
}

model InventoryItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemName  String
  quantity  Int      @default(1)
  
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// --- NextAuth Models (Required) ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}